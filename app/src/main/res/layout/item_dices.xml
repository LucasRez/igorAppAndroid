<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/dice_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:src="@drawable/d4"/>

    <TextView
        android:id="@+id/tipo_de_dado_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:text="d4"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/accent"/>

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:src="@drawable/add"/>

    <TextView
        android:id="@+id/number_of_dices_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="0"
        android:textSize="36dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/remove_button"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/subtract"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/accent"/>


    <ImageButton
        android:id="@+id/positive_button"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:src="@drawable/add"/>

    <TextView
        android:id="@+id/modifier_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="0"
        android:textSize="36dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/negative_button"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/subtract"/>


    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/accent"/>

    <Button
        android:id="@+id/roll_dice_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="LanÃ§ar!"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:background="@color/primary"/>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="0"
        android:textSize="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"/>



</LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="@color/accent"/>

</LinearLayout>