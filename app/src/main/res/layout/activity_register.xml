<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_image"
    tools:context="com.example.lucasrezende.igor.controller.NavigationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:text="Hello World!"
        android:scaleType="fitXY"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/igor_login_icon"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:text="Hello World!"
        android:scaleType="fitXY"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/facebook_button"/>


    <EditText
        android:id="@id/et_email"
        android:hint="Email"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />

    <EditText
        android:id="@+id/et_password"
        android:hint="Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/et_password_confirmation"
        android:hint="Confirmação da senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/et_nickname"
        android:hint="Nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="#00e2BA"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:text="Criar"/>

</LinearLayout>
